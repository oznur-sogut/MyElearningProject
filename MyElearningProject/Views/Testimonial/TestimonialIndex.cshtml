@model List<MyElearningProject.DAL.Entities.Testimonial>
@{
    ViewBag.Title = "TestimonialIndex";
    Layout = "~/Views/AdminLayout/AdminIndex.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                Referanslar Listesi
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Görsel</th>
                        <th>Referans Adı Soyadı</th>
                        <th>Referans Ünvanı</th>
                        <th>Referans Yorumu</th>
                        <th>Durumu Değiştir</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TestimonialID</td>
                            <td><img src="@item.TestimonialImageUrl" style="width:50px; height:50px; border-radius:50%;" /></td>
                            <td>@item.TestimonialNameSurname</td>
                            <td>@item.TestimonialTitle</td>
                            <td><a href="/Testimonial/DetailTestimonial/@item.TestimonialID" class="btn btn-outline-warning">Ayrıntı Gör</a></td>
                            @if (item.TestimonialStatus == true)
                            {
                                <td><a href="/Testimonial/StatusIsFalse/@item.TestimonialID" class="btn btn-outline-info">Aktif</a></td>
                            }
                            else
                            {
                                <td><a href="/Testimonial/StatusIsTrue/@item.TestimonialID" class="btn btn-outline-secondary">Pasif</a></td>
                            }
                            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-success">Güncelle</a></td>
                        </tr>
       }

                </table>
            </div>
        </div>
    </div>
</div>
<a href="/Testimonial/AddTestimonial/" class="btn btn-primary">Yeni Referans Ekle</a>