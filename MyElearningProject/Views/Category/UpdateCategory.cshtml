@model MyElearningProject.DAL.Entities.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/AdminIndex.cshtml";
}

<h2>Kategori Güncelleme Sayfası</h2>
<form method="post">
    @Html.TextBoxFor(x=>x.CategoryID, new {@type="hidden"})
    <label>Kategori Adı</label><br />
    @Html.TextBoxFor(x=>x.CategoryName, new {@class="form-control"})
    <br /><br />
          <button class="btn btn-primary">Güncelle</button>
</form>

