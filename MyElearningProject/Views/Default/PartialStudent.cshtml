@model List<MyElearningProject.DAL.Entities.Student>
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        <div class="text-center">
            <h6 class="section-title bg-white text-center text-primary px-3">Referanslar</h6>
            <h1 class="mb-5">Öğrencilerimiz Ne Düşünüyor!</h1>
        </div>
        <div class="owl-carousel testimonial-carousel position-relative">
            @foreach (var item in Model)
            {
                <div class="testimonial-item text-center">
                    
                         @if (item.StudentImageUrl == null)
                         { <img class="border rounded-circle p-2 mx-auto mb-3" style="width: 80px; height: 80px;" src="~/Templates/elearning-html-template/img/profile-icon-9.png" />
                         }
                         else
                         { 
                <img class="border rounded-circle p-2 mx-auto mb-3" src=" @item.StudentImageUrl " style="width: 80px; height: 80px;">
                    }
                    <h5 class="mb-0">@item.StudentName @item.StudentSurname</h5>
                    <p>@item.StudentEmail</p>
                    <div class="testimonial-text bg-light text-center p-4">
                        <p class="mb-0">Tempor erat elitr rebum at clita. Diam dolor diam ipsum sit diam amet diam et eos. Clita erat ipsum et lorem et sit.</p>
                    </div>
                </div>

            }
        </div>
    </div>
</div>

